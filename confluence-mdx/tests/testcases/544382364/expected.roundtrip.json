      "block_index": 12,
      "xhtml_xpath": "h2[3]",
      "xhtml_fragment": "<h2>Resources 명시 방법</h2>",
      "mdx_content_hash": "241da3627c11e86e45d276fe334d8c74b36a1dfd09c00082f945875a50813831",
