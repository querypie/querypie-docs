    {
      "block_index": 20,
      "xhtml_xpath": "h2[5]",
      "xhtml_fragment": "<h2>Actions 명시 방법</h2>",
      "mdx_content_hash": "55c05431570d730af1982b00e93cbcae500a31e795f3e82a9e9707660ceb451f",
      "mdx_line_range": [
        227,
