    {
      "block_index": 28,
      "xhtml_xpath": "h2[7]",
      "xhtml_fragment": "<h2>KAC Policy 예시</h2>",
      "mdx_content_hash": "bbcb1ce0bffc0ac37fac233c82b0640227595538f4a9157ea1b46a9e99b7c758",
      "mdx_line_range": [
